generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum System {
  Mobile
  Web
}

enum Role {
  Admin
  Analyst
  User
  NotVerify
}

model User {
  id       Int            @id @default(autoincrement())
  email    String         @unique
  password String
  name     String
  role     Role           @default(NotVerify)
  tokens   RefreshToken[]
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  system    System
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  expiresAt DateTime
  revoked   Boolean  @default(false)
}
